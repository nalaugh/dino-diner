        <div>
            <input id="searchs" type="text" name="search" value="@Model.search" />
            <input type="submit" value="Search" />
            <input type="submit" name="filter" id="filter" value="Apply Filter(s)" />
        </div>
        <div>
            <label>
                <input type="checkbox" class="menu-Category" name="menuCategory" value="Combo" checked="@Model.menuCategory.Contains("Combo")" />
                Combos
            </label>
            <label>
                <input type="checkbox" class="menu-Category" name="menuCategory" value="Entree" checked="@Model.menuCategory.Contains("Entree")" />
                Entree
            </label>
            <label>
                <input type="checkbox" class="menu-Category" name="menuCategory" value="Side" checked="@Model.menuCategory.Contains("Side")" />
                Side
            </label>
            <label>
                <input type="checkbox" class="menu-Category" name="menuCategory" value="Drink" checked="@Model.menuCategory.Contains("Drink")" />
                Drink
            </label>
        </div>
        <div>
            <label>
                Minimum Price
                <input type="number" id="minimum-price" min="0" max="20" name="minimumPrice" value="@Model.minimumPrice" />
            </label>
            <label>
                Maximum Price
                <input type="number" id="max-price" min="0" max="20" name="maxPrice" value="@Model.maxPrice" />
            </label>
        </div>
        <div class="box">
            <h4>Excude Ingredients</h4>
            @foreach (string s in Model.Posibleingredints)
            {
                <label>
                    @s
                    <input class="Posibleingredints" type="checkbox" name="Ingredients" value="@s" />
                </label>
            }
        </div>
    </form>

    <div class="column">
        <h2 class="type">Combos</h2>

