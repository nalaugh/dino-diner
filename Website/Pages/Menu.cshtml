                                @(Model.Combo.ElementAt(i).Size = DinoDiner.Menu.Size.Large)
                                <th>@Model.Combo.ElementAt(i).Calories</th>
                            </tr>

                         

                        </table>
                        <p>
                            <b>Ingredients</b>
