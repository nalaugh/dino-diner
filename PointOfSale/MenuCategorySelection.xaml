<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu Category Selection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image HorizontalAlignment="Left" Height="430" Margin="0,10,0,0" VerticalAlignment="Top" Width="790" Grid.ColumnSpan="2"/>

        <Button Click="SelectDrink" FontSize="40" FontFamily="Showcard Gothic"  Grid.Row="1" Grid.Column="0" BorderThickness="5" Content="Drinks"></Button>
        <Button Click="SelectCombo" FontSize="40" FontFamily="Showcard Gothic" Grid.Row="0" Grid.Column="0" BorderThickness="5" Content="Combos"/>
        <Button Click="SelectEntree" FontSize="40" FontFamily="Showcard Gothic" Grid.Row="0" Grid.Column="1" Content="Entrees" />
        <Button Click="SelectSides" FontSize="40" FontFamily="Showcard Gothic" Grid.Row="1" Grid.Column="1"  BorderThickness="5" Content="Sides"/>
    </Grid>
</Page>
