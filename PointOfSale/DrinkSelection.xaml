<Page x:Class="PointOfSale.DrinkSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrinkSelection">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  FontFamily="Showcard Gothic" FontSize="18" HorizontalAlignment="Center" >Drinks</Label>
            <Button Grid.Row="1" FontFamily="Showcard Gothic" FontSize="18" >
                <StackPanel>
                    <TextBlock TextWrapping="Wrap">Jurassic Java</TextBlock>
                    <Image Source="DinoDiner-13.png" Height="64" Width="84"/>
                </StackPanel>

            </Button>
            <Button Grid.Row="2" FontFamily="Showcard Gothic" FontSize="18" >
                <StackPanel>
                    <TextBlock TextWrapping="Wrap">Sodasaurus</TextBlock>
                    <Image Source="DinoDiner-12.png" Height="64" Width="84"/>
                </StackPanel>
              
            </Button>
            <Button Grid.Row="3" FontFamily="Showcard Gothic" FontSize="18" >
                <StackPanel>
                    <TextBlock TextWrapping="Wrap">Tyrannotea</TextBlock>
                    <Image Source="DinoDiner-14.png" Height="64" Width="84"/>
                </StackPanel>
            </Button>
            <Button Grid.Row="4" FontFamily="Showcard Gothic" FontSize="18" >
                <StackPanel>
                    <TextBlock TextWrapping="Wrap">Water</TextBlock>
                    <Image Source="DinoDiner-15.png" Height="64" Width="84"/>
                </StackPanel>
            </Button>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>

                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  FontFamily="Showcard Gothic" FontSize="18" HorizontalAlignment="Center">Size</Label>
            <Button Grid.Row="1" FontFamily="Showcard Gothic" FontSize="18" >Small</Button>
            <Button Grid.Row="2" FontFamily="Showcard Gothic" FontSize="18" >Medium</Button>
            <Button Grid.Row="3" FontFamily="Showcard Gothic" FontSize="18" >Large</Button>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>

                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label  FontFamily="Showcard Gothic" FontSize="18" HorizontalAlignment="Center">Speshal</Label>
        </Grid>

    </Grid>


</Page>
